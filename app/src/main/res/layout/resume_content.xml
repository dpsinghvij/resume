<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:behavior_overlapTop="30dp"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/content_card_elevation"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/layout_margin"
                          android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading"
                        android:textSize="@dimen/heading_size"
                        android:textStyle="bold"
                        android:id="@+id/txtSummaryHeading"
                        android:text="Summary"
                />

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading"
                        android:textSize="@dimen/heading_size"
                        android:id="@+id/txtSummary"
                        android:visibility="gone"
                />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/content_card_elevation"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/layout_margin"
                          android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading"
                        android:textSize="@dimen/heading_size"
                        android:id="@+id/txtEducation"
                        android:textStyle="bold"
                        android:text="Education"
                />

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvEducation"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/content_card_elevation"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/layout_margin"
                          android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading"
                        android:textSize="@dimen/heading_size"
                        android:id="@+id/txtWorkExperience"
                        android:text="Work Experience"
                        android:textStyle="bold"
                />

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvWorkExperience"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/content_card_elevation"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/layout_margin"
                          android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading"
                        android:textSize="@dimen/heading_size"
                        android:id="@+id/txtApps"
                        android:text="Applications"
                        android:textStyle="bold"
                />

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvApps"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>